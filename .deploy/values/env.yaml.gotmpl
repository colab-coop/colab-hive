siteName: 'CoLab Hive'
fullnameOverride: "hive-app"
replicaCount: 1
updateStrategy:
  type: RollingUpdate
  rollingUpdate:
    maxSurge: 1
    maxUnavailable: 1
global:
  storageClass: "ceph-filesystem"
persistence:
  enabled: true
  storageClass: "ceph-filesystem"
  size: 10Gi
  accessModes:
    - ReadWriteMany
redis:
  enabled: false
  auth:
    enabled: true
externalRedis:
  host: hive-cache-master.colab-hive.svc.cluster.local
