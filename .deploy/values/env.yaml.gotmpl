siteName: 'CoLab Hive'
fullnameOverride: "hive-app"
replicaCount: 2
updateStrategy:
  type: RollingUpdate
  rollingUpdate:
    maxSurge: 1
    maxUnavailable: 1
global:
  storageClass: "ceph-filesystem"
persistence:
  enabled: true
  storageClass: "ceph-filesystem"
  size: 10Gi
  accessModes:
    - ReadWriteMany
discourse:
  requests:
    memory: 512Mi
    cpu: 250m
  limits:
    memory: 1024Mi
    cpu: 500m
postgresql:
  enabled: false
externalDatabase:
  create: false
  host: hive-db-postgresql
redis:
  enabled: false
  auth:
    enabled: true
externalRedis:
  host: hive-cache-master
